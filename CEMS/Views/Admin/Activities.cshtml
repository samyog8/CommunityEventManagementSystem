@model IEnumerable<Activity>
@{
    ViewData["Title"] = "Manage Activities";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-lightning me-2"></i>Manage Activities</h1>
        <a asp-action="CreateActivity" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add Activity
        </a>
    </div>
    
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Duration</th>
                        <th>Used In Events</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model)
                    {
                        <tr class="@(activity.IsActive ? "" : "table-secondary")">
                            <td><strong>@activity.Name</strong></td>
                            <td><span class="badge bg-info">@activity.Type</span></td>
                            <td>@activity.DurationDisplay</td>
                            <td>@activity.EventActivities.Count events</td>
                            <td>
                                @if (activity.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditActivity" asp-route-id="@activity.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteActivity" asp-route-id="@activity.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this activity?')">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

@model IEnumerable<Registration>
@{
    ViewData["Title"] = "Pending Registrations";
}

<div class="page-header">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1><i class="bi bi-clock-history me-3"></i>Pending Registrations</h1>
                <p class="mb-0 opacity-75">Review and approve or reject registration requests</p>
            </div>
            <span class="badge bg-warning text-dark px-3 py-2 fs-6">
                @Model.Count() pending
            </span>
        </div>
    </div>
</div>

<div class="container my-5">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var reg in Model)
            {
                <div class="col-md-6 col-lg-4 fade-in">
                    <div class="card h-100 border-warning border-top-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="stat-icon accent me-3" style="width: 50px; height: 50px; font-size: 1.25rem;">
                                    <i class="bi bi-person"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0">@reg.Participant.FullName</h5>
                                    <small class="text-muted">@reg.Participant.Email</small>
                                </div>
                            </div>
                            
                            <div class="mb-3 p-3 bg-light rounded">
                                <h6 class="text-primary mb-2">
                                    <i class="bi bi-calendar-event me-1"></i>@reg.Event.Name
                                </h6>
                                <div class="small text-muted">
                                    <div><i class="bi bi-calendar3 me-1"></i>@reg.Event.Date.ToString("ddd, d MMM yyyy")</div>
                                    <div><i class="bi bi-clock me-1"></i>@reg.Event.StartTime.ToString(@"hh\:mm")</div>
                                    @if (reg.Event.Venue != null)
                                    {
                                        <div><i class="bi bi-geo-alt me-1"></i>@reg.Event.Venue.Name</div>
                                    }
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(reg.Notes))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Notes:</small>
                                    <p class="small mb-0">@reg.Notes</p>
                                </div>
                            }
                            
                            <div class="small text-muted mb-3">
                                <i class="bi bi-clock me-1"></i>Registered @reg.RegistrationDate.ToString("MMM d, yyyy h:mm tt")
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-3 pt-0">
                            <div class="d-flex gap-2">
                                <form asp-action="ApproveFromPending" asp-route-id="@reg.Id" method="post" class="flex-grow-1">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-check-lg me-1"></i>Approve
                                    </button>
                                </form>
                                <form asp-action="RejectFromPending" asp-route-id="@reg.Id" method="post" class="flex-grow-1">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Reject this registration?')">
                                        <i class="bi bi-x-lg me-1"></i>Reject
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card p-5 text-center">
            <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
            <h4 class="mt-3">All Caught Up!</h4>
            <p class="text-muted mb-4">No pending registrations to review.</p>
            <a asp-action="Index" class="btn btn-primary mx-auto" style="width: fit-content;">
                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    }
</div>

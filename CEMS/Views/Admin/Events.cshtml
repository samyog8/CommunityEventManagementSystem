@model IEnumerable<Event>
@{
    ViewData["Title"] = "Manage Events";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-event me-2"></i>Manage Events</h1>
        <a asp-action="CreateEvent" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Create Event
        </a>
    </div>
    
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Venue</th>
                        <th>Registrations</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evt in Model)
                    {
                        <tr class="@(evt.IsActive ? "" : "table-secondary")">
                            <td><strong>@evt.Name</strong></td>
                            <td>@evt.Date.ToString("d MMM yyyy")</td>
                            <td>@evt.StartTime.ToString(@"hh\:mm") - @evt.EndTime.ToString(@"hh\:mm")</td>
                            <td>@(evt.Venue?.Name ?? "-")</td>
                            <td>
                                <a asp-action="EventRegistrations" asp-route-eventId="@evt.Id" class="text-decoration-none">
                                    @evt.Registrations.Count(r => r.Status != RegistrationStatus.Cancelled) / @evt.MaxCapacity
                                </a>
                            </td>
                            <td>
                                @if (evt.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditEvent" asp-route-id="@evt.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="EventRegistrations" asp-route-eventId="@evt.Id" class="btn btn-outline-info" title="Registrations">
                                        <i class="bi bi-people"></i>
                                    </a>
                                    <form asp-action="ToggleEvent" asp-route-id="@evt.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-warning" title="Toggle Status">
                                            <i class="bi bi-toggle-on"></i>
                                        </button>
                                    </form>
                                    <form asp-action="DeleteEvent" asp-route-id="@evt.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event?')">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="page-header mb-0">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="mb-2"><i class="bi bi-speedometer2 me-3"></i>Admin Dashboard</h1>
                <p class="mb-0 opacity-75">Manage your community events, venues, and activities</p>
            </div>
            <div class="d-none d-md-block">
                <span class="badge bg-white text-dark px-3 py-2">
                    <i class="bi bi-person-check me-2"></i>Logged in as Admin
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4 mb-5">
        <div class="col-6 col-lg-3 fade-in stagger-1">
            <div class="stat-card h-100">
                <div class="stat-icon primary">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <div class="stat-number">@ViewBag.EventCount</div>
                <p class="stat-label">Events</p>
                <a asp-action="Events" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-6 col-lg-3 fade-in stagger-2">
            <div class="stat-card h-100">
                <div class="stat-icon accent">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div class="stat-number">@ViewBag.ParticipantCount</div>
                <p class="stat-label">Participants</p>
                <a asp-action="Participants" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-6 col-lg-3 fade-in stagger-3">
            <div class="stat-card h-100">
                <div class="stat-icon secondary">
                    <i class="bi bi-geo-alt-fill"></i>
                </div>
                <div class="stat-number">@ViewBag.VenueCount</div>
                <p class="stat-label">Venues</p>
                <a asp-action="Venues" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-6 col-lg-3 fade-in">
            <div class="stat-card h-100">
                <div class="stat-icon primary">
                    <i class="bi bi-lightning-fill"></i>
                </div>
                <div class="stat-number">@ViewBag.ActivityCount</div>
                <p class="stat-label">Activities</p>
                <a asp-action="Activities" class="stretched-link"></a>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-lg-6 fade-in">
            <div class="card h-100">
                <div class="card-body p-4">
                    <h5 class="mb-4">
                        <i class="bi bi-plus-circle-fill text-primary me-2"></i>Quick Actions
                    </h5>
                    <div class="d-grid gap-3">
                        @if ((int)ViewBag.PendingRegistrationCount > 0)
                        {
                            <a asp-action="PendingRegistrations" class="quick-action-btn warning position-relative">
                                <i class="bi bi-clock-history"></i>
                                Review Pending Registrations
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @ViewBag.PendingRegistrationCount
                                </span>
                            </a>
                        }
                        <a asp-action="CreateEvent" class="quick-action-btn primary">
                            <i class="bi bi-calendar-plus"></i>
                            Create New Event
                        </a>
                        <a asp-action="CreateVenue" class="quick-action-btn outline">
                            <i class="bi bi-building-add"></i>
                            Add New Venue
                        </a>
                        <a asp-action="CreateActivity" class="quick-action-btn outline">
                            <i class="bi bi-lightning"></i>
                            Add New Activity
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 fade-in">
            <div class="card h-100">
                <div class="card-body p-4">
                    <h5 class="mb-4">
                        <i class="bi bi-bar-chart-fill text-primary me-2"></i>Statistics
                    </h5>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Total Registrations</span>
                            <span class="badge bg-primary rounded-pill px-3 py-2">@ViewBag.RegistrationCount</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" style="width: 100%;"></div>
                        </div>
                    </div>
                    
                    <div class="row g-3 mt-3">
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <i class="bi bi-calendar-check text-success fs-4 mb-2 d-block"></i>
                                <strong class="d-block">Active Events</strong>
                                <span class="text-muted small">@ViewBag.EventCount total</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="border rounded p-3 text-center">
                                <i class="bi bi-geo text-info fs-4 mb-2 d-block"></i>
                                <strong class="d-block">Active Venues</strong>
                                <span class="text-muted small">@ViewBag.VenueCount total</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4 mt-4">
        <div class="col-12 fade-in">
            <div class="card">
                <div class="card-body p-4">
                    <h5 class="mb-4">
                        <i class="bi bi-grid-fill text-primary me-2"></i>Management Sections
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-3 col-6">
                            <a asp-action="Events" class="card text-decoration-none text-dark h-100">
                                <div class="card-body text-center p-4">
                                    <i class="bi bi-calendar-event fs-1 text-primary mb-3 d-block"></i>
                                    <h6 class="mb-0">Events</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-6">
                            <a asp-action="Venues" class="card text-decoration-none text-dark h-100">
                                <div class="card-body text-center p-4">
                                    <i class="bi bi-building fs-1 text-primary mb-3 d-block"></i>
                                    <h6 class="mb-0">Venues</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-6">
                            <a asp-action="Activities" class="card text-decoration-none text-dark h-100">
                                <div class="card-body text-center p-4">
                                    <i class="bi bi-lightning fs-1 text-primary mb-3 d-block"></i>
                                    <h6 class="mb-0">Activities</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-6">
                            <a asp-action="Participants" class="card text-decoration-none text-dark h-100">
                                <div class="card-body text-center p-4">
                                    <i class="bi bi-people fs-1 text-primary mb-3 d-block"></i>
                                    <h6 class="mb-0">Participants</h6>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<Participant>
@{
    ViewData["Title"] = "Manage Participants";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people me-2"></i>Manage Participants</h1>
    </div>
    
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Registrations</th>
                        <th>Joined</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var participant in Model)
                    {
                        <tr>
                            <td><strong>@participant.FullName</strong></td>
                            <td>@participant.Email</td>
                            <td>@(participant.PhoneNumber ?? "-")</td>
                            <td>@participant.Registrations.Count(r => r.Status != RegistrationStatus.Cancelled)</td>
                            <td>@participant.CreatedAt.ToString("d MMM yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditParticipant" asp-route-id="@participant.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteParticipant" asp-route-id="@participant.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this participant?')">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

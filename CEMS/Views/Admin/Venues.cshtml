@model IEnumerable<Venue>
@{
    ViewData["Title"] = "Manage Venues";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-geo-alt me-2"></i>Manage Venues</h1>
        <a asp-action="CreateVenue" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add Venue
        </a>
    </div>
    
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Capacity</th>
                        <th>Events</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var venue in Model)
                    {
                        <tr class="@(venue.IsActive ? "" : "table-secondary")">
                            <td><strong>@venue.Name</strong></td>
                            <td>@venue.Address</td>
                            <td>@(venue.City ?? "-")</td>
                            <td>@venue.Capacity</td>
                            <td>@venue.Events.Count</td>
                            <td>
                                @if (venue.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditVenue" asp-route-id="@venue.Id" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteVenue" asp-route-id="@venue.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this venue?')">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
</div>

@{
    ViewData["Title"] = "Access Denied";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card p-5">
                <div class="mb-4">
                    <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                </div>
                <h1 class="mb-3">Access Denied</h1>
                <p class="text-muted mb-4">
                    You don't have permission to access this page. 
                    Please log in with an admin account to continue.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-house me-2"></i>Go Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

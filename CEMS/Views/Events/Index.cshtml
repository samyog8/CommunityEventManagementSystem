@model EventFilterViewModel
@{
    ViewData["Title"] = "Events";
}

<div class="page-header">
    <div class="container">
        <h1><i class="bi bi-calendar-event me-3"></i>Browse Events</h1>
        <p class="mb-0 opacity-75">Find and register for upcoming community events</p>
    </div>
</div>

<div class="container my-5">
    <div class="card mb-5 fade-in">
        <div class="card-body p-4">
            <h5 class="mb-4"><i class="bi bi-funnel me-2 text-primary"></i>Filter Events</h5>
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-lg-3 col-md-6">
                        <label class="form-label">
                            <i class="bi bi-search me-1"></i>Search
                        </label>
                        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Event name...">
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label">
                            <i class="bi bi-calendar me-1"></i>From Date
                        </label>
                        <input type="date" name="DateFrom" value="@Model.DateFrom?.ToString("yyyy-MM-dd")" class="form-control">
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label">
                            <i class="bi bi-calendar me-1"></i>To Date
                        </label>
                        <input type="date" name="DateTo" value="@Model.DateTo?.ToString("yyyy-MM-dd")" class="form-control">
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label">
                            <i class="bi bi-geo-alt me-1"></i>Venue
                        </label>
                        <select name="VenueId" class="form-select">
                            <option value="">All Venues</option>
                            @foreach (var venue in Model.AvailableVenues)
                            {
                                <option value="@venue.Id" selected="@(Model.VenueId == venue.Id)">@venue.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <label class="form-label">
                            <i class="bi bi-tag me-1"></i>Activity Type
                        </label>
                        <select name="ActivityType" class="form-select">
                            <option value="">All Types</option>
                            @foreach (var type in Enum.GetValues<ActivityType>())
                            {
                                <option value="@((int)type)" selected="@(Model.ActivityType == type)">@type</option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    @if (Model.Events.Any())
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h5 class="mb-0 text-muted">
                <i class="bi bi-list-ul me-2"></i>@Model.Events.Count event(s) found
            </h5>
        </div>
        
        <div class="row g-4">
            @foreach (var evt in Model.Events)
            {
                <div class="col-md-6 col-lg-4 fade-in">
                    <div class="event-card card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@evt.Name</h5>
                                @if (evt.GetAvailableSpots() <= 10 && evt.GetAvailableSpots() > 0)
                                {
                                    <span class="badge bg-warning text-dark">@evt.GetAvailableSpots() left</span>
                                }
                                else if (evt.GetAvailableSpots() == 0)
                                {
                                    <span class="badge bg-danger">Full</span>
                                }
                            </div>
                            <div class="d-flex align-items-center text-muted mb-2">
                                <i class="bi bi-calendar3 me-2 text-primary"></i>
                                <span>@evt.Date.ToString("ddd, d MMM yyyy")</span>
                            </div>
                            <div class="d-flex align-items-center text-muted mb-2">
                                <i class="bi bi-clock me-2 text-primary"></i>
                                <span>@evt.StartTime.ToString(@"hh\:mm") - @evt.EndTime.ToString(@"hh\:mm")</span>
                            </div>
                            @if (evt.Venue != null)
                            {
                                <div class="d-flex align-items-center text-muted mb-3">
                                    <i class="bi bi-geo-alt me-2 text-primary"></i>
                                    <span>@evt.Venue.Name</span>
                                </div>
                            }
                            <p class="card-text text-muted small">
                                @(evt.Description.Length > 80 ? evt.Description.Substring(0, 80) + "..." : evt.Description)
                            </p>
                            <div class="mb-2">
                                @foreach (var ea in evt.EventActivities.Take(3))
                                {
                                    <span class="badge badge-@ea.Activity.Type.ToString().ToLower() me-1">@ea.Activity.Type</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-3 pt-0">
                            <div class="d-flex gap-2">
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" class="btn btn-outline-primary flex-grow-1">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                @if (evt.CanRegister())
                                {
                                    <a asp-controller="Registrations" asp-action="Register" asp-route-eventId="@evt.Id" class="btn btn-primary flex-grow-1">
                                        <i class="bi bi-person-plus me-1"></i>Register
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card p-5 text-center fade-in">
            <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No Events Found</h4>
            <p class="text-muted mb-4">Try adjusting your filters to find more events.</p>
            <a href="@Url.Action("Index", "Events")" class="btn btn-primary mx-auto" style="width: fit-content;">
                <i class="bi bi-arrow-clockwise me-2"></i>Clear Filters
            </a>
        </div>
    }
</div>

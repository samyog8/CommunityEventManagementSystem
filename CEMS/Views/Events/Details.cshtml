@model EventDetailsViewModel
@{
    ViewData["Title"] = Model.Event.Name;
}

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Events" asp-action="Index">Events</a></li>
            <li class="breadcrumb-item active">@Model.Event.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title mb-3">@Model.Event.Name</h1>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <i class="bi bi-calendar text-primary me-2"></i>
                                <strong>Date:</strong> @Model.Event.Date.ToString("dddd, d MMMM yyyy")
                            </p>
                            <p class="mb-2">
                                <i class="bi bi-clock text-primary me-2"></i>
                                <strong>Time:</strong> @Model.Event.StartTime.ToString(@"hh\:mm") - @Model.Event.EndTime.ToString(@"hh\:mm")
                            </p>
                        </div>
                        <div class="col-md-6">
                            @if (Model.Event.Venue != null)
                            {
                                <p class="mb-2">
                                    <i class="bi bi-geo-alt text-primary me-2"></i>
                                    <strong>Venue:</strong> @Model.Event.Venue.Name
                                </p>
                                <p class="mb-2 text-muted small">@Model.Event.Venue.FullAddress</p>
                            }
                        </div>
                    </div>
                    
                    <h5>Description</h5>
                    <p class="card-text">@Model.Event.Description</p>
                    
                    @if (Model.Event.EventActivities.Any())
                    {
                        <h5 class="mt-4">Activities</h5>
                        <div class="row g-2">
                            @foreach (var ea in Model.Event.EventActivities)
                            {
                                <div class="col-md-6">
                                    <div class="border rounded p-3">
                                        <h6 class="mb-1">@ea.Activity.Name</h6>
                                        <span class="badge bg-secondary">@ea.Activity.Type</span>
                                        <span class="text-muted small ms-2">@ea.Activity.DurationDisplay</span>
                                        @if (!string.IsNullOrEmpty(ea.Activity.Description))
                                        {
                                            <p class="small text-muted mb-0 mt-2">@ea.Activity.Description</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h5 class="card-title">Registration</h5>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Available Spots:</span>
                            <strong>@Model.AvailableSpots / @Model.Event.MaxCapacity</strong>
                        </div>
                        <div class="progress">
                            @{
                                var percentage = ((Model.Event.MaxCapacity - Model.AvailableSpots) * 100) / Model.Event.MaxCapacity;
                            }
                            <div class="progress-bar" role="progressbar" style="width: @percentage%"></div>
                        </div>
                    </div>
                    
                    @if (Model.CanRegister)
                    {
                        <a asp-controller="Registrations" asp-action="Register" asp-route-eventId="@Model.Event.Id" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-person-plus me-2"></i>Register Now
                        </a>
                    }
                    else if (Model.Event.Date < DateTime.UtcNow.Date)
                    {
                        <div class="alert alert-secondary mb-0">
                            <i class="bi bi-clock-history me-2"></i>This event has passed.
                        </div>
                    }
                    else if (Model.AvailableSpots == 0)
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>This event is fully booked.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>Registration is not available.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "Home";
    var upcomingEvents = ViewBag.UpcomingEvents as List<Event> ?? new List<Event>();
}

<div class="hero-section">
    <div class="container text-center position-relative" style="z-index: 1;">
        <h1 class="display-3 fw-bold mb-3 fade-in">Community Event Management</h1>
        <p class="lead mb-4 opacity-90 fade-in stagger-1">Discover, register, and participate in local community events</p>
        <a asp-controller="Events" asp-action="Index" class="btn btn-light btn-lg fade-in stagger-2">
            <i class="bi bi-search me-2"></i>Browse Events
        </a>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4 mb-5">
        <div class="col-md-4 fade-in stagger-1">
            <div class="stat-card h-100">
                <div class="stat-icon primary">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="stat-number">@ViewBag.TotalEvents</div>
                <p class="stat-label">Upcoming Events</p>
            </div>
        </div>
        <div class="col-md-4 fade-in stagger-2">
            <div class="stat-card h-100">
                <div class="stat-icon accent">
                    <i class="bi bi-geo-alt"></i>
                </div>
                <div class="stat-number">@ViewBag.TotalVenues</div>
                <p class="stat-label">Venues Available</p>
            </div>
        </div>
        <div class="col-md-4 fade-in stagger-3">
            <div class="stat-card h-100">
                <div class="stat-icon secondary">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-number">@ViewBag.TotalParticipants</div>
                <p class="stat-label">Registered Participants</p>
            </div>
        </div>
    </div>

    <h2 class="section-title mb-4">
        <i class="bi bi-calendar-event me-2"></i>Upcoming Events
    </h2>
    
    @if (upcomingEvents.Any())
    {
        <div class="row g-4">
            @foreach (var evt in upcomingEvents)
            {
                var activityBadgeClass = evt.EventActivities.Any() ? 
                    $"badge-{evt.EventActivities.First().Activity.Type.ToString().ToLower()}" : "bg-secondary";
                    
                <div class="col-md-6 col-lg-4 fade-in">
                    <div class="event-card card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@evt.Name</h5>
                            <div class="d-flex align-items-center text-muted mb-2">
                                <i class="bi bi-calendar3 me-2 text-primary"></i>
                                <span>@evt.Date.ToString("ddd, d MMM yyyy")</span>
                            </div>
                            <div class="d-flex align-items-center text-muted mb-2">
                                <i class="bi bi-clock me-2 text-primary"></i>
                                <span>@evt.StartTime.ToString(@"hh\:mm") - @evt.EndTime.ToString(@"hh\:mm")</span>
                            </div>
                            @if (evt.Venue != null)
                            {
                                <div class="d-flex align-items-center text-muted mb-3">
                                    <i class="bi bi-geo-alt me-2 text-primary"></i>
                                    <span>@evt.Venue.Name</span>
                                </div>
                            }
                            <p class="card-text text-muted">
                                @(evt.Description.Length > 100 ? evt.Description.Substring(0, 100) + "..." : evt.Description)
                            </p>
                            <div class="mb-3">
                                @foreach (var ea in evt.EventActivities.Take(2))
                                {
                                    <span class="badge badge-@ea.Activity.Type.ToString().ToLower() me-1">@ea.Activity.Type</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 p-3 pt-0">
                            <div class="d-flex gap-2">
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" class="btn btn-outline-primary flex-grow-1">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                @if (evt.CanRegister())
                                {
                                    <a asp-controller="Registrations" asp-action="Register" asp-route-eventId="@evt.Id" class="btn btn-primary flex-grow-1">
                                        <i class="bi bi-person-plus me-1"></i>Register
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-5">
            <a asp-controller="Events" asp-action="Index" class="btn btn-primary btn-lg px-5">
                View All Events <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    }
    else
    {
        <div class="card p-5 text-center">
            <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No Upcoming Events</h4>
            <p class="text-muted">Check back soon for new community events!</p>
        </div>
    }
</div>

<div class="container my-5 py-5">
    <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h2 class="section-title">Why Join Our Events?</h2>
            <div class="d-flex mt-4 mb-3">
                <div class="me-3">
                    <div class="stat-icon primary" style="width: 50px; height: 50px; font-size: 1.25rem;">
                        <i class="bi bi-people-fill"></i>
                    </div>
                </div>
                <div>
                    <h5 class="mb-1">Build Community</h5>
                    <p class="text-muted mb-0">Connect with like-minded people in your area</p>
                </div>
            </div>
            <div class="d-flex mb-3">
                <div class="me-3">
                    <div class="stat-icon accent" style="width: 50px; height: 50px; font-size: 1.25rem;">
                        <i class="bi bi-lightbulb"></i>
                    </div>
                </div>
                <div>
                    <h5 class="mb-1">Learn New Skills</h5>
                    <p class="text-muted mb-0">Attend workshops and talks from experts</p>
                </div>
            </div>
            <div class="d-flex mb-3">
                <div class="me-3">
                    <div class="stat-icon secondary" style="width: 50px; height: 50px; font-size: 1.25rem;">
                        <i class="bi bi-emoji-smile"></i>
                    </div>
                </div>
                <div>
                    <h5 class="mb-1">Have Fun</h5>
                    <p class="text-muted mb-0">Enjoy games, exhibitions, and performances</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card p-4">
                <h4 class="mb-3"><i class="bi bi-calendar-plus me-2 text-primary"></i>Quick Registration</h4>
                <p class="text-muted">Finding and registering for events is easy:</p>
                <ol class="mb-4">
                    <li class="mb-2">Browse our upcoming events</li>
                    <li class="mb-2">Choose an event that interests you</li>
                    <li class="mb-2">Fill in your details and register</li>
                    <li>Receive confirmation and attend!</li>
                </ol>
                <a asp-controller="Events" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-search me-2"></i>Find Events Now
                </a>
            </div>
        </div>
    </div>
</div>
